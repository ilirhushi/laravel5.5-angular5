{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths" : {
      "@app/*": ["./app/*"],
      "@env/*": ["./environments/*"],
      "@main/*": ["./app/components/main/*"],
      "@partials/*": ["./app/components/partials/*"],
      "@utils/*": ["./app/utils/*"],
      "@app-components/*": ["./app/components/app/*"],
      "@services/*": ["./app/services/*"],
      "@models/*": ["./app/models/*"],
      "@validators/*": ["./app/validators/*"]
    }
  }
}
